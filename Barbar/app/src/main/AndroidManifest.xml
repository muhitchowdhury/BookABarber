<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codecoy.barbar">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Barbar">
        <activity android:name=".activities.AddDateActivity"></activity>
        <activity android:name=".activities.BarberDateActivity" />
        <activity android:name=".activities.BarberListActivity" />
        <activity
            android:name=".activities.CustomerBarbersActivity"
            android:theme="@style/Theme.Barbar.NoActionBar" />
        <activity
            android:name=".activities.SelectionActivity"
            android:theme="@style/Theme.Barbar.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CustomerDashboardActivity"
            android:theme="@style/Theme.Barbar.NoActionBar" />
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/Theme.Barbar.NoActionBar" />
        <activity
            android:name=".activities.SignUpActivity"
            android:theme="@style/Theme.Barbar.NoActionBar" />
        <activity
            android:name=".activities.BarberDashboardActivity"
            android:theme="@style/Theme.Barbar.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Barbar.NoActionBar" />
    </application>

</manifest>